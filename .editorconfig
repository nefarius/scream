
[*]

# ReSharper properties
resharper_blank_lines_around_function_definition = 0
resharper_continuous_line_indent = none
resharper_cpp_invocable_declaration_braces = end_of_line
resharper_cpp_max_line_length = 150
resharper_cpp_other_braces = end_of_line
resharper_cpp_remove_blank_lines_near_braces_in_code = false
resharper_cpp_use_indent_from_vs = false
resharper_cpp_wrap_arguments_style = chop_if_long
resharper_cpp_wrap_parameters_style = chop_if_long
resharper_disable_space_changes_before_trailing_comment = true
resharper_indent_comment = false
resharper_line_break_after_colon_in_member_initializer_lists = on_single_line
resharper_member_initializer_list_style = on_single_line
resharper_simple_block_style = line_break
resharper_space_within_initializer_braces = true
resharper_toplevel_function_declaration_return_type_style = line_break

